---
import Logo from './Logo.astro'
import { getI18N } from '../i18n/'
import Button from './Button.astro'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<header id='header-nav' class='fixed top-0 z-50 w-full px-6'>
  <div
    class='mx-auto grid max-w-7xl items-center justify-between py-1 [grid-template-columns:40px_repeat(2,1fr)] sm:grid-cols-3'
  >
    <a href='/' class='col-span-1 w-fit'>
      <Logo class='h-auto w-10' />
    </a>
    <nav class='col-span-1 flex w-full justify-end gap-2 md:justify-center'>
      <a class='hover:underline' href='/info'>{i18n.HEADER_1}</a>
      <a class='hover:underline' href='/archivo'>{i18n.HEADER_2}</a>
    </nav>
    <Button
      class='justify-self-end lg:text-base'
      url='https://www.youtube.com/watch?v=O43x26hiolw'
    >
      {i18n.HEADER_BUTTON}
    </Button>
  </div>
</header>
